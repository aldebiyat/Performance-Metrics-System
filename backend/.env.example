# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=performance_metrics
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (optional - used for rate limiting)
REDIS_URL=redis://localhost:6379

# Database URL (for migrations)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/performance_metrics

# SMTP Configuration (for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@benchmetrics.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Sentry Configuration (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Auth Configuration
BCRYPT_SALT_ROUNDS=12
REFRESH_TOKEN_DAYS=7
VERIFICATION_TOKEN_HOURS=24
PASSWORD_RESET_TOKEN_HOURS=1

# Rate Limiting Configuration
RATE_LIMIT_API_WINDOW_MS=60000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_RESET_WINDOW_MS=3600000
RATE_LIMIT_RESET_MAX=3

# Cache Configuration
CACHE_TTL_SECONDS=300

# Compression Configuration
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6
