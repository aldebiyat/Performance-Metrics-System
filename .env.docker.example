# ============================================
# pms (Performance Metrics System) - Docker Environment Configuration
# ============================================

# Project Identification
COMPOSE_PROJECT_NAME=pms

# Port Configuration
POSTGRES_PORT=5435
REDIS_PORT=6380
BACKEND_PORT=3200
FRONTEND_PORT=3201

# Database Configuration
POSTGRES_USER=pms_user
POSTGRES_PASSWORD=pms_password_CHANGE_ME
POSTGRES_DB=pms_db

# JWT Configuration (Generate with: openssl rand -hex 64)
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND
JWT_REFRESH_SECRET=CHANGE_ME_USE_OPENSSL_RAND

# JWT Expiry Settings
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Application URLs
BACKEND_URL=http://localhost:3200
FRONTEND_URL=http://localhost:3201
REACT_APP_API_URL=http://localhost:3200

# CORS Configuration
CORS_ORIGIN=http://localhost:3201

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_CHANGE_ME

# Sentry Configuration (Optional)
SENTRY_DSN=
REACT_APP_SENTRY_DSN=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com

# Security Settings
BCRYPT_SALT_ROUNDS=12
REFRESH_TOKEN_DAYS=7
VERIFICATION_TOKEN_HOURS=24
PASSWORD_RESET_TOKEN_HOURS=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=5

# Cache Settings
CACHE_TTL_SECONDS=300

# Compression Settings
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6
